{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": ["string", "null"]
    },
    "field_type": {
      "type": "string",
      "enum": [
        "single_select",
        "multi_select",
        "text",
        "link",
        "number",
        "datetime",
        "incident"
      ]
    },
    "required": {
      "type": "boolean"
    },
    "show_before_creation": {
      "type": "boolean"
    },
    "show_before_closure": {
      "type": "boolean"
    },
    "show_in_announcement_post": {
      "type": "boolean"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "time_extracted": {
      "type": ["string"],
      "format": "date-time"
    }
  },
  "additionalProperties": false,
  "required": [
    "id", 
    "name", 
    "field_type", 
    "required", 
    "show_before_creation", 
    "show_before_closure", 
    "show_in_announcement_post", 
    "created_at", 
    "updated_at"
  ]
}