{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": ["string", "null"]
    },
    "configuration_url": {
      "type": ["string", "null"],
      "format": "uri"
    },
    "source_type": {
      "type": "string",
      "enum": [
        "api",
        "grafana",
        "prometheus",
        "datadog",
        "newrelic",
        "pagerduty",
        "sentry",
        "pingdom",
        "statuscake",
        "cloudwatch",
        "stackdriver",
        "external",
        "custom"
      ]
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "time_extracted": {
      "type": ["string"],
      "format": "date-time"
    }
  },
  "additionalProperties": false,
  "required": ["id", "name", "source_type", "created_at", "updated_at"]
}